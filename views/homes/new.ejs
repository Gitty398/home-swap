<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <%- include('../partials/_navbar.ejs', {user: user}) %>

        <form action="/homes" method="POST">
            <label for="streetAddress">Street Address:</label>
            <input type="text" id="streetAddress" name="streetAddress" required />

            <label for="city">City:</label>
            <input type="text" id="city" name="city" required />

            <label for="numBedrooms">Number of Bedrooms:</label>
            <input type="number" id="numBedrooms" name="numBedrooms" required />

            <label for="numBathrooms">Number of Bathrooms:</label>
            <input type="number" id="numBathrooms" name="numBathrooms" required />

            <label for="class">Home Type::</label>
            <select name="class" required>
                <option value="Single-Family Home">Single-Family Home</option>
                <option value="Apartment/ Condo">Apartment / Condo</option>
                <option value="Multi-Family">Multi-Family</option>
                <option value="Other">Other</option>
            </select>

            <label>Beach Access:
                <input type="checkbox" name="beachAccess" value="true">

            </label>

            <label>Pool Available:
                <input type="checkbox" name="poolAvailable" value="true">

            </label>

            <label>Pets Allowed:
                <input type="checkbox" name="petsAllowed" value="true">

            </label>

            <label>Image URL:</label>
            <input type="text" name="image" placeholder="https://..." />

            <button type="submit">Add Home</button>

        </form>







        </form>
</body>

</html>