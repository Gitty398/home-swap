<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs') %>
</head>

<body>
    <%- include('../partials/_navbar.ejs') %>

        <form id="edit-form" action="/homes/<%= home._id %>/?_method=PUT" method="POST">
            <label for="streetAddress">Street Address:</label>
            <input type="text" id="streetAddress" name="streetAddress" required value="<%= home.streetAddress %>" />

            <label for="city">City:</label>
            <input type="text" id="city" name="city" required value="<%= home.city %>" />

            <label for="numBedrooms">Number of Bedrooms:</label>
            <input type="number" id="numBedrooms" name="numBedrooms" required value="<%= home.numBedrooms %>" />

            <label for="numBathrooms">Number of Bathrooms:</label>
            <input type="number" id="numBathrooms" name="numBathrooms" required value="<%= home.numBathrooms %>" />

            <label for="class">Home Type::</label>
            <select name="class" required>
                <option value="Single-Family Home" <%=home.class==="Single-Family Home" ? "selected" : "" %>
                    >Single-Family Home</option>
                <option value="Apartment/ Condo" <%=home.class==="Apartment/ Condo" ? "selected" : "" %> >Apartment /
                    Condo</option>
                <option value="Multi-Family" <%=home.class==="Multi-Family" ? "selected" : "" %> >Multi-Family</option>
                <option value="Other" <%=home.class==="Other Residence" ? "selected" : "" %> >Other</option>
            </select>

            <label>Beach Access:
                <input type="checkbox" name="beachAccess" value="true" <%=home.beachAccess ? "checked" : "" %>
                >>
            </label>

            <label>Pool Available:
                <input type="checkbox" name="poolAvailable" value="true" <%=home.poolAvailable ? "checked" : "" %>>

            </label>

            <label>Pets Allowed:
                <input type="checkbox" name="petsAllowed" value="true" <%=home.petsAllowed ? "checked" : "" %>>

            </label>

            <label>Image URL:</label>
            <input type="text" name="image" placeholder="https://..." value="<%= home.image %>" />

            <button type="submit">Edit Home</button>

        </form>
</body>

</html>